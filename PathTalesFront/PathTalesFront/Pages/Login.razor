@page "/login"
@using PathTalesFront.Model
@inject HttpClient Http
 
<PageTitle>Login | PathTales</PageTitle>

<h3 class="text-center m-5">Connection</h3>

<form class="w-50 container" @onsubmit="HandleLogin">
    <div class="form-group">
        <label>Email address</label>
        <input type="email" class="form-control" @bind="email">
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" @bind="password">
    </div>

    <button type="submit" class="btn btn-primary mt-1">Submit</button>
</form>

@code {
    private string email;
    private string password;

    private async Task HandleLogin()
    {
        var data = new LoginRequest
        {
            Email = email,
            Password = password
        };

        var response = await Http.PostAsJsonAsync("http://localhost:5038/User/login", data);

        if (response.IsSuccessStatusCode)
        {
            var token = await response.Content.ReadAsStringAsync();
            Console.WriteLine("connecter " + token);
        }
        else
        {
            Console.WriteLine("Erreur de login");
        }
    }
}
